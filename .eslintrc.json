{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "off",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "warn",
    "curly": "warn",
    "no-console": "off",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "public/question_banks/**/*",
    "*.min.js"
  ]
}
