{
  "name": "gphc-question-bank",
  "version": "2.0.0",
  "description": "A modern, offline-capable question bank application for GPhC exam preparation with enhanced UI/UX and performance optimizations.",
  "main": "dist/index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node post-build.js",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "analyze": "vite-bundle-analyzer",
    "serve": "serve dist"
  },
  "keywords": [
    "gphc",
    "pharmacy",
    "exam",
    "question-bank",
    "education",
    "offline",
    "offline"
  ],
  "author": "GPhC Question Bank Team",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^7.1.0",
    "gh-pages": "^6.1.1",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vite": "^7.1.3",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "dependencies": {
    "dompurify": "^3.0.8",
    "easytimer.js": "^4.6.0",
    "glob": "^11.0.3",
    "marked": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
